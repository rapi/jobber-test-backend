{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "rules": {
        "no-console": 0,
        "allow": ["console"],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
